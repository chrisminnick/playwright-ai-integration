{
  "name": "playwright-ai-integration",
  "version": "1.0.0",
  "description": "AI-powered Playwright test generation with MCP server integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "setup": "node scripts/setup.js",
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
